{
  "name": "yozobi-shared",
  "version": "1.16.2",
  "private": true,
  "author": "Matt Pocock <matt@thisisone.tv>",
  "workspaces": [
    "spa-boilerplate",
    "toolbox"
  ],
  "scripts": {
    "setup": "bash ./setup.sh",
    "spa": "yarn workspace spa-boilerplate",
    "toolbox": "yarn workspace toolbox",
    "tb": "yarn workspace toolbox",
    "codegen": "bash internals/scripts/ci-codegen.sh",
    "lint": "bash internals/scripts/ci-lint.sh",
    "test:ci": "bash internals/scripts/ci-test.sh",
    "generate": "plop --plopfile internals/generators/plopfile.js",
    "version-minor": "npm version minor && git push --tags",
    "version-patch": "npm version patch && git push --tags",
    "quick-pr": "node internals/scripts/quickPullRequest.js",
    "draft-pr": "node internals/scripts/draftPullRequest.js",
    "release": "node internals/scripts/release.js",
    "lint-staged": "lint-staged",
    "report-bug": "node internals/scripts/quickIssue.js",
    "bug-report": "npm run report-bug",
    "ci-check": "yarn install && npm run codegen && npm run lint && npm run test:ci"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "plop": "^2.5.3",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.0.3",
    "camelcase-keys": "^6.2.2",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "gray-matter": "^4.0.2",
    "prompts": "^2.3.2"
  }
}